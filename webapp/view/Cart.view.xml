<mvc:View
    controllerName="zapp.fiorishop.controller.Cart"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:tab="sap.ui.table"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Page title="{i18n>cartTitle}" showNavButton="true" navButtonPress="onPageBack">

        <mvc:XMLView viewName="zapp.fiorishop.view.Header"/>
        
        <tab:Table id="table1"
            rows="{cart>/order/itemList}"
            visibleRowCount="10"
            threshold="0"
            class="sapUiSmallMargin"
            selectionMode="MultiToggle">
            <tab:toolbar>
                <OverflowToolbar>
                    <Title id="title" text="Itens"></Title>
                </OverflowToolbar>
            </tab:toolbar>
            <tab:columns>
                <tab:Column width="8rem">
                    <Label text="{i18n>Photo}" />
                    <tab:template>
                        <Image src="/img/product/{cart>ProductID}/1.jpg" 
                            width="100%" 
                            />
                    </tab:template>
                </tab:Column>
                <tab:Column width="30rem">
                    <Label text="{i18n>Product}" />
                    <tab:template>
                        <Text text="{cart>ProductID} - {cart>ProductName}" wrapping="false" />
                    </tab:template>
                </tab:Column>
                <tab:Column width="6rem">
                    <Label text="{i18n>ItemUnitary}" />
                    <tab:template>
                        <Text text="R$ {path: 'cart>ItemUnitary', formatter: '.formatter.price'}" wrapping="false" />
                    </tab:template>
                </tab:Column>
                <tab:Column width="6rem">
                    <Label text="{i18n>Quantity}" />
                    <tab:template>
                        <Text text="{cart>Quantity}" wrapping="false" />
                    </tab:template>
                </tab:Column>
                <tab:Column width="8rem">
                    <Label text="{i18n>ItemTotal}" />
                    <tab:template>
                        <Text text="R$ {path: 'cart>ItemTotal', formatter: '.formatter.price'}" wrapping="false" />
                    </tab:template>
                </tab:Column>
            </tab:columns>
        </tab:Table>

        <mvc:XMLView viewName="zapp.fiorishop.view.Footer"/>

    </Page>
</mvc:View>
