<mvc:View
    controllerName="zapp.fiorishop.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page title="{i18n>pageNotFoundTitle}">

        <mvc:XMLView viewName="zapp.fiorishop.view.Header"/>
        
        <VBox class="sapUiSmallMargin">
            <Title text="Página não encontrada" titleStyle="H1"/>
            <Text text="Verifique se o endereço esta correto e tente novamente" class="sapUiSmallMarginTop"/>
            <Button text="Ir para a página inicial" press="onGoToHome" class="sapUiSmallMarginTop"/>
        </VBox>

        <mvc:XMLView viewName="zapp.fiorishop.view.Footer"/>
    </Page>
</mvc:View>